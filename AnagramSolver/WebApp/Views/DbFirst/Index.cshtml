@model WebApp.ViewModels.DbFirstIndexViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="content">
    <div>
        <h3>
                View all words here: @Html.ActionLink("View", "ViewAll", "DbFirst", null, new {@class = "btn btn-primary"})
        </h3>
    </div>
    <div class="anagram-results">
        <h4>Anagrams of "@Model.UserWord":</h4>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Word</th>
                    <th scope="col">Type</th>
                </tr>
                </thead>
                @for (int i = 0; i < @Model.Anagrams.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@Model.Anagrams[i].Word</td>
                        <td>@Model.Anagrams[i].Category</td>
                    </tr>
                }
            </table>
    </div>

</div>
