@model WebApp.DictionaryModification;

@{
    ViewBag.Title = "title";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="alert-info">Add a new word to the dictionary</h2>
<div class="form-block">
    @using (Html.BeginForm("Save", "CodeFirst"))
    {
        <div class="form-group form-table">
            @Html.LabelFor(x => x.Word, "Enter new word", new{@class="form-label label-field"})
            @Html.TextBoxFor(x => x.Word, new{@class="form-control input-field", placeholder="e.g. adatos"})
        </div>
        <div class="form-group form-table">
            @Html.LabelFor(x => x.Category, "Enter word type", new{@class="form-label label-field"})
            @Html.TextBoxFor(x => x.Category, new{@class="form-control input-field", placeholder="e.g. dkt"})
        </div>
        @Html.Hidden("ModificationType", "Add")
        <button type="submit" class="btn btn-warning">Proceed</button>
    }
</div>